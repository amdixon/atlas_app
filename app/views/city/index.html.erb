<script>
  setTimeout( function(){
    $(masonryContent).animate({'opacity': 1.0}, 1000)
  }, 2500)
  
  $.ajaxSetup({ cache:true });

  var city_name = $('#city_name').text()
  
  
  //////// FLICKR API /////////////
  var flickrURL = "http://api.flickr.com/services/rest/?method=flickr.photos.search&api_key=6cd67f99c979719b322e087ba4030fe8&safe_search=1&per_page=20&license=1";
  var flickrQuery = flickrURL + "&tags=" + city_name
  
  var src;
  var location;
  $.getJSON(flickrQuery + "&format=json&jsoncallback=?", function(data){
      $.each(data.photos.photo, function(i,item){
          src = "http://farm"+ item.farm +".static.flickr.com/"+ item.server +"/"+ item.id +"_"+ item.secret +"_z.jpg";
          var location  = '#flickr_' + parseInt(i);
          
          $(location).append( $("<img/>").attr("src", src) )
          if ( i == 6 ) return false;
      });
  });
  setTimeout( function(){
        $(masonryContent).masonry();
      }, 2000)
  
  
  //////// TWITTER API /////////////
  var twitterURL = "http://search.twitter.com/search.json?callback=?&q=%23"
  var twitterQuery = twitterURL + city_name   //+ "%23travel"
  
  
  $.getJSON(twitterQuery, function(data){
      $.each(data.results, function(i,tweet){
            
        // Build the html string for the current tweet
        var tweet_html = '<div class="tweet_text">' + tweet.text + '<br>';
        tweet_html += '<span class="attweet">@' + tweet.from_user + '</span></div>';
  
        // Append html string to tweet_container div
        var tweetLocation = '#twitter_' + parseInt(i);
        $(tweetLocation).append(tweet_html);
          
        if ( i == 14 ) return false;
      });
    
    
  });
  
  
  //////// WIKIPEDIA API /////////////
  var wikiURL = "http://en.wikipedia.org/w/api.php?callback=?&action=query&list=search&format=json&srprop=snippet&srlimit=1";
  var wikiQuery = wikiURL + '&srsearch=' + city_name;
  
  
  $.getJSON(wikiQuery, function(data){
    // Build the html string for the current tweet
    var wiki_html = '' + data.query.search[0].snippet
    
    // Append html string to tweet_container div
    var wikiLocation = '#wiki_0';
    $(wikiLocation).append(wiki_html);
      
  });
    
    
  
</script>








